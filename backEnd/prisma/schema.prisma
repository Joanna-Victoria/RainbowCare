// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password_hash String
  created_at    DateTime       @default(now())
  Notification  Notification[]
  role          Role           @default(USER)

  @@map("users")
}

model FosterHome {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  tags       Tag[]

  @@map("foster_home")
}

model Notification {
  id         String   @id @default(uuid())
  title      String
  content    String
  created_at DateTime @default(now())

  recipient       User   @relation(fields: [recipient_email], references: [email])
  recipient_email String

  @@map("notifications")
}

enum Role {
  USER
  ADMIN
}

enum Tag {
  JOB
  BOOTCAMP
}
