// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  name            String
  last_name       String
  email           String   @unique
  password_hash   String
  created_at      DateTime @default(now())
  role            Role     @default(USER)
  interested_tags Tag[]

  @@map("users")
}

model FosterHome {
  id              String   @id @default(uuid())
  name            String
  created_at      DateTime @default(now())
  description     String
  recipient_email String[]
  tags            Tag[]

  @@map("foster_home")
}

enum Role {
  USER
  ADMIN
}

enum Tag {
  JOB
  BOOTCAMP
  HEALTH
  HOME
  LEISURE
  EDUCATION
  NEWS
  ENTERTAINMENT
  BIOGRAPHY
  EVENTS
  LIFESTYLE
  PSYCHOLOGY
}
